<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">

    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
      <% if (user) { %>
      <form class="form-inline" action="/logout" method="POST">
        Logged in as: <%= user.email %>
        <button class="btn btn-outline-dark my-2 my-sm-0" type="Logout" style="margin-left: 20px;">Logout</button>
      </form>
      <% } else { %>
        <form class="form-inline" action="register" method="GET">
          <button class="btn btn-outline-dark my-2 my-sm-0" type="register" style="margin-left: 20px;">Register</button>  
        </form>
        <form class="form-inline" action="login" method="GET">
          <button class="btn btn-outline-dark my-2 my-sm-0" type="login" style="margin-left: 20px;">Login</button>
        </form>
        <% } %>
  </nav>
</header>


